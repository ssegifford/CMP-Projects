<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cup"
    tools:context=".WinnerActivity">


    <Button
        android:id="@+id/shareText_button"
        android:layout_width="153dp"
        android:layout_height="35dp"
        android:background="#FFC107"
        android:gravity="center"
        android:onClick="shareText"
        android:text="@string/text"
        android:textAlignment="gravity"
        android:textSize="15sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/searchMap_button"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/dial_button"
        app:layout_constraintVertical_bias="0.329"

        />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#130E0E"
        android:onClick="playAgain"
        android:text="@string/play_again"
        android:textColor="#FAF4F4"
        tools:layout_editor_absoluteX="376dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="108dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:text="@string/share_results"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playAgain" />

    <EditText
        android:id="@+id/editText_maps"
        android:layout_width="252dp"
        android:layout_height="36dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/holo_orange_light"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/type_location_here"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/searchMap_button"
        app:layout_constraintEnd_toEndOf="@+id/searchMap_button"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/searchMap_button"
        app:layout_constraintTop_toBottomOf="@+id/shareText_button"
        app:layout_constraintVertical_bias="0.896" />

    <TextView
        android:id="@+id/winner"
        android:layout_width="209dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text=""
        android:textColor="#FFC107"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/dial_button"
        android:layout_width="108dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_light"
        android:onClick="phoneCall"
        android:text="@string/dial"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"

        />

    <Button
        android:id="@+id/searchMap_button"
        android:layout_width="167dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFC107"
        android:gravity="center"
        android:onClick="searchMap"
        android:text="@string/search_map"
        android:textSize="15sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/playAgain"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/playAgain"

        />

</android.support.constraint.ConstraintLayout>
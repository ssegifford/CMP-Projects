<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardioTabFragment"
    android:background="@color/blue"
    android:id="@+id/cardio_tab"
    >

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="352dp"
        android:layout_height="192dp"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_burpee"
                android:layout_width="233dp"
                android:layout_height="175dp"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/burpee"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/burpee_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/burpee"
                android:textColor="@color/blue"
                android:textStyle="bold|italic"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cab_card2"
        android:layout_width="352dp"
        android:layout_height="192dp"
        app:cardBackgroundColor="@color/darkOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stair_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"

                android:layout_marginStart="11dp"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="16dp"
                android:text="@string/stair_climber"
                android:textColor="@color/blue"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/image_stair_climber"
                android:layout_width="233dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignEnd="@id/stair_text"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_margin="-116dp"
                android:layout_marginBottom="-5dp"
                app:srcCompat="@drawable/donut_stairclimber"
                android:contentDescription="@string/todo" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
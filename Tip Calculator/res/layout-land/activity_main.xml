<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <EditText
        android:id="@+id/editText_BillAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:ems="10"
        android:inputType="number"
        android:maxLength="6"
        android:padding="@dimen/padding_textView_default"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView_BillAmount"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:background="@color/backgroundBillAmount"
        android:hint="@string/textView_billAmountHint"
        android:labelFor="@+id/editText_BillAmount"
        android:padding="@dimen/padding_textView_default"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="@string/enter_amount_editText"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="78dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="0" />

    <TextView
        android:id="@+id/percent"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_row="3"
        android:layout_column="0"
        android:gravity="center|center_horizontal"
        android:text="@string/seekbar_percent" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="292dp"
        android:layout_height="30dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tip_amount"
        android:layout_width="305dp"
        android:layout_height="48dp"
        android:layout_row="4"
        android:layout_column="1"
        android:gravity="center"
        android:text="@string/zero"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tip"
        android:layout_width="83dp"
        android:layout_height="39dp"
        android:layout_row="4"
        android:layout_column="0"
        android:gravity="center"
        android:text="@string/tip" />

    <TextView
        android:id="@+id/total_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:gravity="center"
        android:text="@string/total_per_person" />

    <TextView
        android:id="@+id/show_total_per"
        android:layout_width="305dp"
        android:layout_height="48dp"
        android:layout_row="5"
        android:layout_column="1"
        android:text="@string/zero"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/rounding"
        android:layout_width="90dp"
        android:layout_height="49dp"
        android:layout_row="2"
        android:layout_column="0"
        android:gravity="center"
        android:text="@string/rounding_noptions"

        />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <RadioButton
            android:id="@+id/no_radio"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:onClick="roundingOptions"
            />


        <RadioButton
            android:id="@+id/tip_radio"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/tip"
            android:onClick="roundingOptions"
            />

        <RadioButton
            android:id="@+id/total_radio"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:onClick="roundingOptions"
            />


    </RadioGroup>



    <TextView
        android:id="@+id/total_amount"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_row="6"
        android:layout_column="1"
        android:gravity="center"
        android:text="@string/zero"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="82dp"
        android:layout_height="43dp"
        android:layout_row="6"
        android:layout_column="0"
        android:gravity="center"
        android:text="@string/total" />




</GridLayout>
